<Home>:
    name:"Home"
    MDBoxLayout:
        orientation:'vertical'
        name: "Gruposn"
        
        MDRelativeLayout:
            id: rel_layout
            orientation: 'vertical'
            size_hint_y: None
            height: dp(100)
            md_bg_color: 205/255, 25/255,25/255, 1
            MDLabel:
                text: "Tasks Activity"
                theme_text_color:"Custom"
                font_size: dp(30)
                bold:True
                text_color: 1,1,1,1
                halign: "center"
            MDBoxLayout:
                size_hint:None,None
                size: '50dp','50dp'
                pos_hint: {'center_x': 0.1,'center_y': 0.5}
                md_bg_color:1,1,1,1
                radius:[50,]
                FitImage:
                    size_hint:None,None
                    size: '50dp','50dp'
                    pos_hint: {'center_x': 0.4,'center_y': 0.5}
                    source: "./source/icon/icon.png"
                
            

                            
        ScreenManager:
            id: screen_manager
            
            TasksGroupDay:
                id: taskdayid
                name: "taskt_screen"
                MDBoxLayout:
                    id: varias_widget
                    ScrollView:
                        
                        MDGridLayout:
                            cols: 1
                            id:days_gridlayout
                            adaptive_height: True
                            spacing: '10dp'
                            padding: [10,]
                            
                                        
                            
                    
                
        MDBoxLayout:
            id: rel_layout
            orientation: 'vertical'
            size_hint_y: None
            height: dp(20)
            md_bg_color: 205/255, 25/255,25/255, 1




<Add_day>
    id: add_tasks
    pos_hint: {'center_x': 0.5,'top': 0.15}
    md_bg_color:205/255, 25/255,25/255, 1
    size_hint: None,None
    height:dp(80)
    
    width: dp(80)
    radius: [50,50,50,50]
    
    MDIconButton:
        pos_hint: {'center_x': 0.5,'center_y': 0.5}
        on_release: app.add_widget_day()
        size_hint:None,None
        theme_icon_color:"Custom"
        icon_size: dp(60)
        icon_color:  1,1,1,1
        icon: "plus-circle-outline"